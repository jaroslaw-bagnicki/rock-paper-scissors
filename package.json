{
  "name": "game_rock-paper-scissors",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "init-gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "clean:css": "rimraf dist/css/*",
    "test": "npm run test:html",
    "test:html": "globstar -- nu-html-checker *.html",
    "watch": "run-p watch:**",
    "watch:sass": "node-sass src/scss/main.scss dist/css/style.css --source-map true --watch",
    "watch:serve": "browser-sync start --server dist/ --files ./css/*.css ./index.html --watch",
    "build": "run-s clean:css build:**",
    "build:sass": "node-sass src/scss/main.scss dist/css/style.css --output-style compressed",
    "build:prefix-css": "postcss dist/css/style.css --output dist/css/style.css --no-map --use autoprefixer"
  },
  "repository": "git@github.com:jaroslaw-bagnicki/rock-paper-scissors.git",
  "author": "Jaros≈Çaw Bagnicki <jarek@bagnicki.net>",
  "license": "mit",
  "private": true,
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.5",
    "globstar": "^1.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "postcss-cli": "^5.0.1",
    "rimraf": "^2.6.2"
  }
}
