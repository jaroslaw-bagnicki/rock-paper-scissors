{
  "name": "game_rock-paper-scissors",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "init-gitignore": "curl https://raw.githubusercontent.com/github/gitignore/master/Node.gitignore -o .gitignore",
    "test": "npm run test:html",
    "test:html": "globstar -- nu-html-checker *.html",

    "//": " --- BUILD (DEVELOPMENT) --- ",
    "build-dev": "run-s build-dev:**",
    "build-dev:clear": "rimraf dev/*",
    "build-dev:html": "cp src/index.html dev/index.html",
    "build-dev:assets": "cp -r src/assets/* dev",
    "build-dev:js": "cp -r src/js/* dev",
    "build-dev:css": "node-sass src/scss/main.scss dev/css/style.css --source-map true",
    
    "//": " --- WATCH & SERVE --- ",
    "serve": "run-s build-dev watch",
    "watch": "run-p watch:**",
    "watch:html": "onchange \"src/index.html\" -- npm run build-dev:html",
    "watch:assets": "onchange \"src/assets/**/*\" -- npm run build-dev:assets",
    "watch:js": "onchange \"src/js/*\" -- npm run build-dev:js",
    "watch:css": "node-sass src/scss/main.scss dev/css/style.css --source-map true --watch",
    "watch:start-server": "browser-sync start --server dev/ --files ./css/*.css ./index.html --watch",

    "//": " --- BUILD (PRODUCTION) --- ",
    "build": "run-s build:**",
    "build:clear": "rimraf dist/*",
    "build:html": "cp src/index.html dist/index.html",
    "build:assets": "cp -r src/assets/* dist",
    "build:js": "cp -r src/js/* dist",
    "build:css": "node-sass src/scss/main.scss dist/css/style.css --output-style compressed",
    "build:prefix-css": "postcss dist/css/style.css --output dist/css/style.css --no-map --use autoprefixer"
  },
  "repository": "git@github.com:jaroslaw-bagnicki/rock-paper-scissors.git",
  "author": "Jaros≈Çaw Bagnicki <jarek@bagnicki.net>",
  "license": "mit",
  "private": true,
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.24.5",
    "globstar": "^1.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.3",
    "nu-html-checker": "^0.1.0",
    "onchange": "^4.1.0",
    "postcss-cli": "^5.0.1",
    "rimraf": "^2.6.2"
  }
}
